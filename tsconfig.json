{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "es2018", "ES2021.String"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "preserve",
    "alwaysStrict": true,
    "baseUrl": "./",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "paths": {
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@framework/*": ["./framework/*"],
      "@lib/*": ["./lib/*"],
      "@mocks/*": ["./__mocks__/*"],
      "@pages/*": ["./pages/*"],
      "@public/*": ["./public/*"],
      "@plugins/*": ["./plugins/*"],
      "@server/*": ["./server/*"],
      "@tests/*": ["./__tests__/*"],
      "@theme/*": ["./theme/*"]
    },
    "outDir": "dist",
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "gen", "resources/scripts", "src/assets", "public", "tmp"]
}
