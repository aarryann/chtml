{
  "name": "html-comment-template-engine-example",
  "version": "1.0.0",
  "description": "Example of using HTML commenting template engine with Express.js server",
  "main": "server.js",
  "watch": {
    "gen:html": {
      "patterns": ["src/pages"],
      "extensions": "html,ejs"
    },
    "gen:ract": {
      "patterns": ["src/pages"],
      "extensions": "html,ejs"
    },
    "build:ts": {
      "patterns": ["src,server"],
      "extensions": "ts,js"
    },
    "build:wp": {
      "patterns": ["dist,src"]
    }
  },
  "scripts": {
    "start": "npm run build && node dist/server/index.js",
    "dev": "npm run build && nodemon -w dist -w public dist/server/index.js",
    "build": "npm run build:ts && npm run build:wp && npm run build:assets",
    "build:tw": "postcss styles/tailwind.css -o public/assets/css/tailwind.css",
    "build:ts": "node res/scripts/genRact.js f && tsc -p tsconfig.server.json && tsc -p tsconfig.app.json",
    "build:wp": "webpack --config=res/webpack/webpack.config.js --mode=development",
    "build:assets": "rimraf public/assets && cp -R src/assets public/ ",
    "gen:html": "node res/scripts/genHTML.js",
    "gen:ract": "node res/scripts/genRact.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-run-all --parallel watch:ts-app watch:ts-server watch:wp",
    "watch:ts": "npm-watch",
    "watch:wp": "webpack --watch --config=res/webpack/webpack.config.js  --mode=development"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "jsdom": "^21.1.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.0",
    "@types/node": "^18.15.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.3",
    "cssnano": "^5.1.15",
    "ejs": "^3.1.9",
    "eslint": "^8.36.0",
    "eslint-webpack-plugin": "^4.0.0",
    "file-loader": "^6.2.0",
    "front-matter": "^4.0.2",
    "fs-extra": "^11.1.1",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "marked": "^4.3.0",
    "mini-css-extract-plugin": "^2.7.5",
    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.1.0",
    "postcss-preset-env": "^8.1.0",
    "prettier": "^2.8.7",
    "style-loader": "^3.3.2",
    "stylelint": "^15.3.0",
    "stylelint-config-standard": "^31.0.0",
    "stylelint-webpack-plugin": "^4.1.0",
    "tailwindcss": "^3.2.7",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0"
  }
}
